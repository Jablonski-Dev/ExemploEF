@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<body class="bg-dark text-light">
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="fw-bold display-4 text-light">Editar Cliente</h1>
            <p class="text-muted">Altere os dados do cliente no sistema de forma prática e eficiente.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="ClienteId" />

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label text-light fw-semibold"></label>
                        <input asp-for="Nome" class="form-control shadow-sm rounded-pill" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nascimento" class="control-label text-light fw-semibold"></label>
                        <input asp-for="Nascimento" class="form-control shadow-sm rounded-pill" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-primary fw-bold shadow-sm rounded-pill w-100">Editar</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary fw-bold shadow-sm rounded-pill">
                <i class="bi bi-arrow-left-circle me-2"></i> Voltar à Lista
            </a>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
