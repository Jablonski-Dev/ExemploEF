@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<body class="bg-dark text-light">
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="fw-bold display-4 text-light">Criar Novo Cliente</h1>
            <p class="text-muted">Preencha os dados abaixo para cadastrar um novo cliente.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" class="shadow-sm p-4 rounded-3 bg-white">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label fw-semibold text-dark"></label>
                        <input asp-for="Nome" class="form-control border-dark shadow-sm" placeholder="Digite o nome do cliente" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nascimento" class="control-label fw-semibold text-dark"></label>
                        <input asp-for="Nascimento" type="date" class="form-control border-dark shadow-sm" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center mb-3">
                        <input type="submit" value="Criar Cliente" class="btn btn-primary btn-lg rounded-pill shadow-sm fw-bold" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-light btn-sm shadow-sm rounded-pill">Voltar para a lista</a>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}