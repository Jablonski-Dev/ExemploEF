@model IEnumerable<ExemploEF.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<body class="bg-dark text-light">
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="fw-bold display-4 text-light">Lista de Clientes</h1>
            <p class="text-muted">Gerencie os clientes cadastrados no sistema de forma prática e eficiente.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-end mb-4">
            <p>
                <a asp-action="Create" class="btn btn-success fw-bold shadow-sm rounded-pill">
                    <i class="bi bi-plus-circle me-1"></i> Criar Novo Cliente
                </a>
            </p>
        </div>

        <div class="table-responsive shadow-sm">
            <table class="table table-light table-hover table-bordered align-middle rounded-3 overflow-hidden">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="text-center text-dark">@Html.DisplayNameFor(model => model.Nome)</th>
                        <th class="text-center text-dark">@Html.DisplayNameFor(model => model.Nascimento)</th>
                        <th class="text-center text-dark">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-semibold text-dark">@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td class="text-center text-dark">@item.Nascimento.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ClienteId"
                                   class="btn btn-warning btn-sm rounded-pill shadow-sm me-1 text-dark fw-bold"
                                   aria-label="Editar Cliente">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ClienteId"
                                   class="btn btn-info btn-sm rounded-pill shadow-sm text-white me-1 fw-bold"
                                   aria-label="Ver Detalhes do Cliente">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClienteId"
                                   class="btn btn-danger btn-sm rounded-pill shadow-sm fw-bold"
                                   onclick="return confirm('Tem certeza que deseja excluir este cliente?');"
                                   aria-label="Excluir Cliente">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
