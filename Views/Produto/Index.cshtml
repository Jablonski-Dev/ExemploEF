@model IEnumerable<ExemploEF.Models.Produto>

@{
    ViewData["Title"] = "Índice";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Lista de Produtos</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            font-family: 'Roboto', sans-serif;
            color: #f5f5f5;
            text-align: center;
        }

        .container {
            width: 80%;
            margin: auto;
            padding: 20px;
        }

        h1 {
            color: #fff;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(255, 235, 205, 0.3);
        }

            .table th, .table td {
                border: 1px solid #d2b48c;
                padding: 10px;
                text-align: left;
                color: #000;
            }

            .table th {
                background-color: #f5f5dc;
            }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            margin: 5px;
            font-size: 16px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
            cursor: pointer;
        }

        .btn-create {
            background: #28a745;
        }

            .btn-create:hover {
                background: #218838;
            }

        .btn-action {
            background: #007bff;
        }

            .btn-action:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Lista de Produtos</h1>
        <p>
            <a class="btn btn-create" asp-action="Create">Criar novo</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Estoque)</th>
                    <th>@Html.DisplayNameFor(model => model.Categorias)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estoque)</td>
                        <td>
                            @if (item.Categorias != null)
                            {
                                @Html.DisplayFor(modelItem => item.Categorias.Nome)
                            }
                            else
                            {
                                <span>Sem categoria</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-action" asp-action="Edit" asp-route-id="@item.Produtoid">Editar</a>
                            <a class="btn btn-action" asp-action="Details" asp-route-id="@item.Produtoid">Detalhes</a>
                            <a class="btn btn-action" asp-action="Delete" asp-route-id="@item.Produtoid">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
