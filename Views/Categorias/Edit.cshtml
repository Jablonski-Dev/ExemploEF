@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<body class="bg-dark text-light" style="background-color: #1c1c1c;">
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="fw-bold display-4 text-light">Editar Categoria</h1>
            <p class="text-muted">Altere os detalhes da categoria de forma prática e eficiente.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit" class="p-4 bg-white text-dark rounded-3 shadow-sm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="CategoriaId" />

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control shadow-sm rounded-pill" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary fw-bold shadow-sm rounded-pill w-100">
                            <i class="bi bi-pencil me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary fw-bold shadow-sm rounded-pill">
                <i class="bi bi-arrow-left-circle me-2"></i> Voltar à Lista
            </a>
        </div>
    </div>
</body>


